# ============================================
# NEXT.JS ENVIRONMENT VARIABLES
# ============================================
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# Variables without prefix are server-only (secure)
# ============================================

# External Service URLs (Public)
NEXT_PUBLIC_CLEARBIT_API_URL=https://logo.clearbit.com
NEXT_PUBLIC_UI_AVATARS_URL=https://ui-avatars.com/api
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
LOGO_REFRESH_INTERVAL=30

# Logo.dev API (Server-only - SECRET)
LOGO_DEV_API_KEY=your-logo-dev-key

# Supabase Configuration (Public - Client needs these)
# Project: isoenbpjhogyokuyeknu
NEXT_PUBLIC_SUPABASE_URL=https://isoenbpjhogyokuyeknu.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Site URL (Public - Used for OAuth redirects)
# Set this to your production domain (e.g., https://your-app.vercel.app)
# For local development, leave unset to use window.location.origin
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Google OAuth Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GMAIL_REDIRECT_URI=https://your-domain.com/auth/gmail-callback

# Gmail Security Configuration (Server-only - SECRET)
TOKEN_ENCRYPTION_KEY=your-secure-32-character-encryption-key
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# LinkedIn Integration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://your-domain.com/auth/linkedin-callback

# HubSpot Integration
NEXT_PUBLIC_HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
NEXT_PUBLIC_HUBSPOT_REDIRECT_URI=https://your-domain.com/integrations/callback

# Mailchimp Integration (Server-only - SECRET)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_DATA_CENTER=your-mailchimp-data-center

# GitHub Integration (Server-only - SECRET)
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-personal-access-token

# MCP Server Configuration
PORT=3000
NODE_ENV=production

# Decision Maker Enrichment Webhook (Server-only - SECRET)
DECISION_MAKER_WEBHOOK_URL=https://your-webhook-service.com/decision-makers
DECISION_MAKER_WEBHOOK_SECRET=your-webhook-secret

# Google Gemini AI API (Server-only - SECRET)
GEMINI_API_KEY=your-gemini-api-key-here

# Error Logging & Email Notifications
NEXT_PUBLIC_ADMIN_EMAIL=admin@yourcompany.com
NEXT_PUBLIC_ERROR_NOTIFICATION_EMAIL=errors@yourcompany.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ERROR_WEBHOOK_URL=https://your-monitoring-service.com/webhook/errors

# Optional: Development overrides
# NEXT_PUBLIC_SUPABASE_URL=https://localhost:54321  # For local development