  },
  "homepage": "https://github.com/stevetowers08/empowr-crm#readme",
  "type": "module",
  "scripts": {
    "dev": "vite --port 8080 --host",
    "build": "vite build",
    "preview": "vite preview",
    "vercel-build": "vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "db:schema": "node scripts/db-schema.js",
    "db:help": "node scripts/db-schema.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:console": "playwright test --reporter=list",
    "test:e2e:verbose": "playwright test --reporter=verbose",
    "test:debug": "vitest --reporter=verbose",
    "test:auth": "vitest src/test/authorization/",
    "test:auth:coverage": "vitest run --coverage src/test/authorization/",
    "test:auth:e2e": "playwright test e2e/authorization.spec.ts",
    "test:auth:all": "npm run test:auth && npm run test:auth:e2e",
    "test:auth:watch": "vitest --watch src/test/authorization/"
  },
