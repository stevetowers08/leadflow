{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": false,
    "composite": false, // Disabled - Next.js doesn't fully support project references
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    /* Path Aliases - Next.js 16 best practice */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Next.js Specific */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/page-components/**/*.tsx",
    "src/pages/**/*.ts",
    "src/pages/**/*.tsx",
    "src/hooks/**/*.ts",
    "src/hooks/**/*.tsx",
    "src/lib/**/*.ts",
    "src/utils/**/*.ts",
    "src/utils/**/*.tsx",
    "src/services/**/*.ts",
    "src/contexts/**/*.ts",
    "src/contexts/**/*.tsx",
    "src/types/**/*.ts",
    "src/constants/**/*.ts",
    "src/integrations/**/*.ts",
    "src/server/**/*.ts",
    "src/data/**/*.ts",
    "src/design-system/**/*.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "src/proxy.ts",
    "vitest.config.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "api/**/*",
    "supabase/functions/**/*",
    "src/ai/**/*",
    "src/components/ai/ChatWindow.tsx",
    "src/components/ai/FloatingChatWidget.tsx",
    "src/components/ai/ChatInput.tsx",
    "src/components/ai/ChatMessage.tsx",
    "src/contexts/ChatContext.tsx",
    "dist",
    ".next"
  ]
}
